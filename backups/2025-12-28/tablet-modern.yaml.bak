                  return lightOn
                    ? '<ha-icon icon="mdi:lightbulb-on" style="color: #fbbf24;"></ha-icon>'
                    : '<ha-icon icon="mdi:lightbulb-outline" style="color: #64748b;"></ha-icon>';
                ]]]
            styles:
              card:
                - background: 'rgba(30,41,59,0.8)'
                - border-radius: 16px
                - padding: 12px
              grid:
                - grid-template-areas: '"i temp" "n n" "occupancy light"'
                - grid-template-columns: '1fr 1fr'
                - grid-template-rows: 'auto auto auto'
              icon:
                - color: '#eab308'
              name:
                - font-size: 14px
                - font-weight: bold
                - justify-self: start
              custom_fields:
                temp:
                  - justify-self: end
                occupancy:
                  - justify-self: start
                light:
                  - justify-self: end

      # Room Status Grid - Bedrooms
      - type: markdown
        content: "### Bedrooms & Office"
        card_mod:
          style: |
            ha-card { background: transparent; box-shadow: none; padding: 0; }
            ha-markdown { padding: 8px 0 0 0; }

      - type: horizontal-stack
        card_mod:
          style: |
            :host { grid-column: 1 / -1 !important; }
        cards:
          # Master Bedroom Status Card
          - type: custom:button-card
            name: Master
            icon: mdi:bed-king
            tap_action:
              action: navigate
              navigation_path: /tablet-modern/master-bedroom
            custom_fields:
              temp: >
                [[[ return `<span style="font-size: 24px; font-weight: bold;">${Math.round(parseFloat(states['sensor.underbed_motion_device_temperature']?.state || 0))}°</span>` ]]]
              occupancy: >
                [[[
                  const occupied = states['binary_sensor.master_bedroom_occupancy']?.state === 'on' ||
                                   states['binary_sensor.master_bedroom_mm_occupancy']?.state === 'on';
                  return occupied
                    ? '<ha-icon icon="mdi:motion-sensor" style="color: #22c55e;"></ha-icon>'
                    : '<ha-icon icon="mdi:motion-sensor-off" style="color: #64748b;"></ha-icon>';
                ]]]
              bed: >
                [[[
                  const jayInBed = states['binary_sensor.jay_in_bed']?.state === 'on';
                  const tracyInBed = states['binary_sensor.tracy_in_bed']?.state === 'on';
                  if (jayInBed && tracyInBed) return '<ha-icon icon="mdi:bed" style="color: #22c55e;"></ha-icon><span style="font-size:10px;color:#22c55e;">2</span>';
                  if (jayInBed || tracyInBed) return '<ha-icon icon="mdi:bed" style="color: #3b82f6;"></ha-icon><span style="font-size:10px;color:#3b82f6;">1</span>';
                  return '<ha-icon icon="mdi:bed-empty" style="color: #64748b;"></ha-icon>';
                ]]]
