  # ===========================================
  # LIVING ROOM VIEW - Full Control Panel
  # ===========================================
  - title: "Living Room"
    path: living-room
    icon: mdi:sofa
    background: var(--lovelace-background)
    cards:
      # Header with Status Indicators
      - type: custom:mushroom-chips-card
        card_mod:
          style: |
            :host { grid-column: 1 / -1 !important; }
        chips:
          - type: back
          - type: template
            content: "Living Room"
            icon: mdi:sofa
            icon_color: indigo
          - type: template
            icon: mdi:thermometer
            content: "{{ states('sensor.thermostat_indoor_temperature') | round(0) }}°F"
            icon_color: orange
          - type: template
            icon: >
              {% if is_state('binary_sensor.living_room_occupancy', 'on') or is_state('binary_sensor.fp_living_room_presence_sensor', 'on') %}
                mdi:motion-sensor
              {% else %}
                mdi:motion-sensor-off
              {% endif %}
            icon_color: >
              {% if is_state('binary_sensor.living_room_occupancy', 'on') or is_state('binary_sensor.fp_living_room_presence_sensor', 'on') %}
                green
              {% else %}
                grey
              {% endif %}
          - type: template
            icon: >
              {% if is_state('input_boolean.living_room_manual_mode', 'on') %}
                mdi:hand-back-right
              {% elif is_state('input_boolean.living_room_motion_disable', 'on') %}
                mdi:motion-sensor-off
              {% else %}
                mdi:motion-sensor
              {% endif %}
            content: >
              {% if is_state('input_boolean.living_room_manual_mode', 'on') %}
                Manual Mode
              {% elif is_state('input_boolean.living_room_motion_disable', 'on') %}
                Motion Disabled
              {% else %}
                Motion Enabled
              {% endif %}
            icon_color: >
              {% if is_state('input_boolean.living_room_manual_mode', 'on') or is_state('input_boolean.living_room_motion_disable', 'on') %}
                deep-orange
              {% else %}
                light-green
              {% endif %}
          - type: template
            icon: mdi:chevron-right
            tap_action:
              action: navigate
              navigation_path: /tablet-modern/kitchen
        alignment: center

      # Environmental Info Bar
      - type: horizontal-stack
        card_mod:
          style: |
            :host { grid-column: 1 / -1 !important; }
        cards:
          - type: custom:mushroom-entity-card
            entity: sensor.thermostat_indoor_temperature
            name: "Temp"
            icon: mdi:thermometer
            primary_info: state
            secondary_info: name
            layout: vertical
          - type: custom:mushroom-entity-card
            entity: climate.thermostat
            name: "HVAC"
            icon: mdi:thermostat
            primary_info: state
            secondary_info: name
            layout: vertical
          - type: custom:mushroom-entity-card
            entity: input_boolean.living_room_manual_mode
            name: "Manual"
            icon: mdi:hand-back-right
            primary_info: state
            secondary_info: name
            layout: vertical
            tap_action:
              action: toggle

      # Main Light Control
      - type: custom:mushroom-light-card
        card_mod:
          style: |
            :host { grid-column: 1 / -1 !important; }
        entity: light.living_room
        name: "Main Lights"
        fill_container: true
        show_brightness_control: true
        show_color_temp_control: true
        use_light_color: true
        collapsible_controls: false

      # Light Scene Quick Buttons
      - type: horizontal-stack
        card_mod:
          style: |
            :host { grid-column: 1 / -1 !important; }
