# ===========================================
# TABLET MODERN DASHBOARD - Information Dense
# Created: 2025-12-22 (Rebuilt for control panel look)
# Swipe navigation enabled for tablets
# Dynamic backgrounds added 2025-12-22
# ===========================================

title: "Tablet Modern"

swipe_nav:
  wrap: true
  animate: swipe
  skip_tabs: []
  prevent_default: true
  swipe_amount: 30

# Background Definitions (CSS Gradients)
# Selected via input_select.dashboard_background
# Options: Dark Slate, Midnight Blue, Deep Purple, Northern Lights,
#          Cosmic Gradient, Neon Glow, Sunset Horizon, Ocean Depth,
#          Forest Night, Minimalist Dark

views:
  # ===========================================
  # HOME VIEW - Command Center Overview
  # ===========================================
  - title: "Home"
    path: home
    icon: mdi:home
    background: var(--lovelace-background)
    cards:
      # Status Bar - Date/Time & Quick Status
      - type: custom:mushroom-chips-card
        card_mod:
          style: |
            :host { grid-column: 1 / -1 !important; }
        chips:
          - type: template
            icon: mdi:calendar
            content: "{{ now().strftime('%A, %b %d') }}"
          - type: template
            icon: mdi:thermometer
            content: "Inside {{ states('sensor.thermostat_indoor_temperature') | round(0) }}°"
            icon_color: orange
          - type: template
            icon: mdi:thermometer-low
            content: "Outside {{ states('sensor.thermostat_outdoor_temperature') | round(0) }}°"
            icon_color: blue
          - type: template
            icon: >
              {% if is_state('binary_sensor.door_front_contact', 'on') %}
                mdi:door-open
              {% else %}
                mdi:door-closed
              {% endif %}
            content: "Front"
            icon_color: >
              {% if is_state('binary_sensor.door_front_contact', 'on') %}
                red
              {% else %}
                green
              {% endif %}
        alignment: center

      # Weather & Climate Row
      - type: horizontal-stack
        card_mod:
          style: |
            :host { grid-column: 1 / -1 !important; }
        cards:
          - type: weather-forecast
            entity: weather.home
            show_forecast: true
            forecast_type: daily
            card_mod:
              style: |
                ha-card { border-radius: 16px; }
          - type: thermostat
            entity: climate.thermostat
            card_mod:
              style: |
                ha-card { border-radius: 16px; }

      # Movie Mode & Quick Actions
      - type: horizontal-stack
        card_mod:
          style: |
            :host { grid-column: 1 / -1 !important; }
        cards:
          - type: custom:button-card
            entity: input_boolean.global_movie_mode
            name: Movie Mode
            icon: mdi:movie-open
            show_state: true
            tap_action:
              action: call-service
              service: script.toggle_movie_mode
            styles:
              card:
                - background: >
                    [[[ return entity.state === 'on'
                        ? 'linear-gradient(135deg, #7c3aed, #4f46e5)'
                        : 'rgba(30,41,59,0.7)' ]]]
                - border-radius: 16px
                - height: 70px
              icon:
                - color: >
                    [[[ return entity.state === 'on' ? '#fbbf24' : '#94a3b8' ]]]
              name:
                - color: '#f1f5f9'
                - font-size: 12px
          - type: custom:button-card
            name: All Lights Off
            icon: mdi:lightbulb-group-off
            tap_action:
              action: call-service
              service: light.turn_off
              target:
                entity_id: all
              confirmation:
                text: "Turn off ALL lights?"
            styles:
              card:
                - background: 'rgba(30,41,59,0.7)'
                - border-radius: 16px
                - height: 70px
              icon:
                - color: '#ef4444'
              name:
                - color: '#f1f5f9'
                - font-size: 12px
          - type: custom:button-card
            name: Goodnight
            icon: mdi:weather-night
            tap_action:
              action: call-service
              service: scene.turn_on
              target:
                entity_id: scene.good_night
            styles:
              card:
                - background: 'rgba(30,41,59,0.7)'
                - border-radius: 16px
                - height: 70px
              icon:
                - color: '#8b5cf6'
              name:
                - color: '#f1f5f9'
                - font-size: 12px

      # Room Status Grid - First Floor
      - type: markdown
        content: "### First Floor Status"
        card_mod:
          style: |
            ha-card { background: transparent; box-shadow: none; padding: 0; }
            ha-markdown { padding: 8px 0 0 0; }

      - type: horizontal-stack
        card_mod:
          style: |
            :host { grid-column: 1 / -1 !important; }
        cards:
          # Living Room Status Card
          - type: custom:button-card
            name: Living Room
            icon: mdi:sofa
            tap_action:
              action: navigate
              navigation_path: /tablet-modern/living-room
            custom_fields:
              temp: >
                [[[ return `<span style="font-size: 24px; font-weight: bold;">${Math.round(parseFloat(states['sensor.thermostat_indoor_temperature']?.state || 0))}°</span>` ]]]
              occupancy: >
                [[[
                  const occupied = states['binary_sensor.living_room_occupancy']?.state === 'on' ||
                                   states['binary_sensor.fp_living_room_presence_sensor']?.state === 'on';
                  return occupied
                    ? '<ha-icon icon="mdi:motion-sensor" style="color: #22c55e;"></ha-icon>'
                    : '<ha-icon icon="mdi:motion-sensor-off" style="color: #64748b;"></ha-icon>';
                ]]]
              light: >
                [[[
                  const lightOn = states['light.living_room']?.state === 'on';
                  return lightOn
                    ? '<ha-icon icon="mdi:lightbulb-on" style="color: #fbbf24;"></ha-icon>'
                    : '<ha-icon icon="mdi:lightbulb-outline" style="color: #64748b;"></ha-icon>';
                ]]]
            styles:
              card:
                - background: 'rgba(30,41,59,0.8)'
                - border-radius: 16px
                - padding: 12px
              grid:
                - grid-template-areas: '"i temp" "n n" "occupancy light"'
                - grid-template-columns: '1fr 1fr'
                - grid-template-rows: 'auto auto auto'
              icon:
                - color: '#6366f1'
              name:
                - font-size: 14px
                - font-weight: bold
                - justify-self: start
              custom_fields:
                temp:
                  - justify-self: end
                occupancy:
                  - justify-self: start
                light:
                  - justify-self: end

          # Kitchen Status Card
          - type: custom:button-card
            name: Kitchen
            icon: mdi:chef-hat
            tap_action:
              action: navigate
              navigation_path: /tablet-modern/kitchen
            custom_fields:
