                - border-radius: 16px
                - padding: 12px
              grid:
                - grid-template-areas: '"i temp" "n n" "occupancy light"'
                - grid-template-columns: '1fr 1fr'
                - grid-template-rows: 'auto auto auto'
              icon:
                - color: '#f97316'
              name:
                - font-size: 14px
                - font-weight: bold
                - justify-self: start
              custom_fields:
                temp:
                  - justify-self: end
                occupancy:
                  - justify-self: start
                light:
                  - justify-self: end

          # Dining Room Status Card
          - type: custom:button-card
            name: Dining
            icon: mdi:silverware-fork-knife
            tap_action:
              action: navigate
              navigation_path: /tablet-modern/dining-room
            custom_fields:
              temp: >
                [[[ return `<span style="font-size: 24px; font-weight: bold;">${Math.round(parseFloat(states['sensor.thermostat_indoor_temperature']?.state || 0))}°</span>` ]]]
              occupancy: >
