                  - justify-self: start
                light:
                  - justify-self: end

      # Guest Rooms Row
      - type: horizontal-stack
        card_mod:
          style: |
            :host { grid-column: 1 / -1 !important; }
        cards:
          # Alpha Guest Status Card
          - type: custom:button-card
            name: Alpha
